		<div class="container">
			<div class="row">
				<div class="col-sm-4 block">
					<div>
						<h3>Recent News</h3>
						<hr>
					</div>
				</div>
				<div class="col-sm-4 block">
					<div>
						<h3>Recent Problems</h3>
						<hr>
						<table class="table">
							<thead>
								<tr>
									<th>Name</th>
									<th>Difficulty</th>
								</tr>
							</thead>
							<tbody>
								<% for(var i = recentProblems.length-1; i >= Math.max(0, recentProblems.length-6); i--) { %>
								<tr>
									<td>
										<%= recentProblems[i].name %>
									</td>
									<td>
										<%= recentProblems[i].difficulty %>
									</td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>
				</div>
				<div class="col-sm-4 block">
